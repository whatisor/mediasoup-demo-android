<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="room_header">

        <EditTextPreference
            app:key="roomId"
            app:title="room_id"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="peerId"
            app:title="peer_id"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="displayName"
            app:title="display_name"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="forceTcp"
            app:title="force_tcp" />

        <SwitchPreferenceCompat
            app:key="forceH264"
            app:title="force_h264" />

        <SwitchPreferenceCompat
            app:key="forceVP9"
            app:title="force_vp9" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="produce"
            app:title="produce" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="consume"
            app:title="consume" />

    </PreferenceCategory>

    <PreferenceCategory app:title="device_header">

        <ListPreference
            app:defaultValue="front"
            app:key="camera"
            app:title="camera"
            app:useSimpleSummaryProvider="true" />

